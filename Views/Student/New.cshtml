@model SchoolPortal.ViewModels.NewStudentViewModel


@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Student</h2>


@using (Html.BeginForm("Create", "Student"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Student.FirstName)
        @Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.MiddleName)
        @Html.TextBoxFor(m => m.Student.MiddleName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.Lastname)
        @Html.TextBoxFor(m => m.Student.Lastname, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.Gender)
        @Html.TextBoxFor(m => m.Student.Gender, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Student.EmailAddress)
        @Html.TextBoxFor(m => m.Student.EmailAddress, new { @class = "form-control" })
    </div>



    <div>
        @Html.LabelFor(m => m.Student.Type)
        @Html.DropDownList("Please select", new List<SelectListItem>

                 {
                    new SelectListItem{ Text="Day Student", Value = "1" },
                    new SelectListItem{ Text="Boarding Student", Value = "2" },

                 }, htmlAttributes: new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(m => m.Student.Form.Id)
        @Html.DropDownListFor(m => m.Student.Form.Name , new SelectList(Model.Form, "Name", "Name" ),"Please select student's class", new { @class = "form-control"})


     
                 
    </div>
    <button type="submit" class="btn btn-primary">Save</button>










}

