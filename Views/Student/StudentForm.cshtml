@model SchoolPortal.ViewModels.StudentFormViewModel

@{
	ViewBag.Title = "New";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Register New Student</h2>





@using (Html.BeginForm("Create", "Student"))
{
<div class="row">

	<div class="col-md-4">

		<div class="form-group">

			@Html.LabelFor(m => m.Student.FirstName)
			@Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.FirstName)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.MiddleName)
			@Html.TextBoxFor(m => m.Student.MiddleName, new { @class = "form-control" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.Lastname)
			@Html.TextBoxFor(m => m.Student.Lastname, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.Lastname)
		</div>

		


	</div>

	<div class="col-md-4">


		<div class="form-group">
			@Html.LabelFor(m => m.Student.EnrolmentDate)
			@Html.TextBoxFor(m => m.Student.EnrolmentDate, "{0:d MMM yyyy}", new { @class = "form-control datepicker", placeholder = "dd/mm/yyyy" })
			@Html.ValidationMessageFor(m => m.Student.EnrolmentDate)
		</div>

		<div>

			@Html.LabelFor(m => m.Student.Gender)
			@Html.DropDownListFor(m => m.Student.GenderId, new SelectList(Model.Genders, "GenderId", "Name"), "", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.GenderId)
		</div>

		<br />
		<div>
			@Html.LabelFor(m => m.Student.Year)
			@Html.DropDownListFor(m => m.Student.YearId, new SelectList(Model.Years, "YearId", "YearName"), "", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.YearId)
		</div>
		<br />

		<div class="form-group">
			@Html.LabelFor(m => m.Student.DateOfBirth)
			@Html.TextBoxFor(m => m.Student.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control datepicker", placeholder = "dd/mm/yyyy" })
			@Html.ValidationMessageFor(m => m.Student.DateOfBirth)
		</div>

		<br />



	</div>


	<div class="col-md-4">


		<div class="form-group">
			@Html.LabelFor(m => m.Student.StudentAddress.Address1)
			@Html.TextBoxFor(m => m.Student.StudentAddress.Address1, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.StudentAddress.Address1)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.StudentAddress.Address2)
			@Html.TextBoxFor(m => m.Student.StudentAddress.Address2, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.StudentAddress.Address2)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.StudentAddress.City)
			@Html.TextBoxFor(m => m.Student.StudentAddress.City, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.StudentAddress.City)
		</div>

		<button type="submit" class="btn btn-primary">Save</button>



	</div>
</div>

}
