@model SchoolPortal.ViewModels.NewSubjectViewModel

@{
	ViewBag.Title = "Create";
}

<h2>Create New Subject</h2>
<hr />

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">

		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(m => m.Subjects.SubjectName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(m => m.Subjects.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.Subjects.SubjectName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Subjects.PassMark, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(m => m.Subjects.PassMark, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.Subjects.PassMark, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Subjects.YearId, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(m => m.Subjects.YearId, new SelectList(Model.Years, "YearId", "YearName"), "", new { @class = "form-control" })
				@Html.ValidationMessageFor(m => m.Subjects.YearId, "", new { @class = "text-danger" })

			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="button" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}


<div>
	<input type="button" value="Back to List" onclick="location.href='@Url.Action("Index", "Subjects")'" class="btn btn-primary btn-sm" />
</div>




@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}