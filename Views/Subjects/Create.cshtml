@model SchoolPortal.ViewModels.NewSubjectViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Subjects</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Subjects.SubjectName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Subjects.SubjectName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Subjects.SubjectName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Subjects.PassMark, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Subjects.PassMark, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Subjects.PassMark, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        @Html.LabelFor(m => m.Subjects.Year.YearName)
        @Html.DropDownListFor(m => m.Subjects.Year.YearName, new SelectList(Model.Years, "YearId", "YearName"), "", new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(m => m.Subjects.Year.YearId)
        @Html.DropDownListFor(m => m.Subjects.Year.YearId, new SelectList(Model.Years, "YearId", "YearId"), "", new { @class = "form-control" })
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
