@model SchoolPortal.ViewModels.StudentFormViewModel

@{
	ViewBag.Title = "New";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register New Student</h2>
<hr />

@using (Html.BeginForm("Create", "Student", null, FormMethod.Post, new {enctype = "multipart/form-data"}))
{
<div class="row">

	<div class="col-md-3">

		<div class="form-group">

			@Html.LabelFor(m => m.Student.FirstName)
			@Html.TextBoxFor(m => m.Student.FirstName, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.FirstName)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.MiddleName)
			@Html.TextBoxFor(m => m.Student.MiddleName, new { @class = "form-control" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.Lastname)
			@Html.TextBoxFor(m => m.Student.Lastname, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.Lastname)
		</div>





		<div class="form-group">
			@Html.LabelFor(m => m.Student.ReligionId)
			@Html.DropDownListFor(m => m.Student.ReligionId, new SelectList(Model.Religions, "ReligionId", "ReligionName"), "", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.ReligionId)
		</div>
		<br />

		
	</div>

	<div class="col-md-3">

		<div class="form-group">
			@Html.LabelFor(m => m.Student.EnrolmentDate)
			@Html.TextBoxFor(m => m.Student.EnrolmentDate, "{0:d MMM yyyy}", new { @class = "form-control datepicker", placeholder = "dd/mm/yyyy" })
			@Html.ValidationMessageFor(m => m.Student.EnrolmentDate)
		</div>

		<div>

			@Html.LabelFor(m => m.Student.GenderId)
			@Html.DropDownListFor(m => m.Student.GenderId, new SelectList(Model.Genders, "GenderId", "Name"), "", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.GenderId)
		</div>

		<br />
		<div>
			@Html.LabelFor(m => m.Student.YearId)
			@Html.DropDownListFor(m => m.Student.YearId, new SelectList(Model.Years, "YearId", "YearName"), "", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.YearId)
		</div>
		<br />

		<div class="form-group">
			@Html.LabelFor(m => m.Student.DateOfBirth)
			@Html.TextBoxFor(m => m.Student.DateOfBirth, "{0:d MMM yyyy}", new { @class = "form-control datepicker", placeholder = "dd/mm/yyyy" })
			@Html.ValidationMessageFor(m => m.Student.DateOfBirth)
		</div>

		<br />
	</div>

	<div class="col-md-3">

		<div class="form-group">
			@Html.LabelFor(m => m.Student.HouseNumberOrName)
			@Html.TextBoxFor(m => m.Student.HouseNumberOrName, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.HouseNumberOrName)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.FirstLineofAdd)
			@Html.TextBoxFor(m => m.Student.FirstLineofAdd, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.FirstLineofAdd)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.SecondLineofAdd)
			@Html.TextBoxFor(m => m.Student.SecondLineofAdd, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.SecondLineofAdd)
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Student.Area)
			@Html.TextBoxFor(m => m.Student.Area, new { @class = "form-control", })
			@Html.ValidationMessageFor(m => m.Student.Area)
		</div>

		<br /><br />

		@*@Html.HiddenFor(m => m.Student.Id)*@

		<button type="submit" class="btn btn-primary">Register</button>
	</div>


	<div class="col-md-3">

		<div>
			@Html.LabelFor(m => m.Student.TribeId)
			@Html.DropDownListFor(m => m.Student.TribeId, new SelectList(Model.Tribes, "TribeId", "TribeName"), "", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Student.TribeId)
		</div>

		<br/><br />

		<div class="input-group">
			@Html.LabelFor(m => m.Student.Files, new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				<input type="file" id="Avatar" name="upload" />
			</div>
		</div>


	</div>


	</div>

	}
	<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

	@section scripts{
		<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
		<script>

			$(function () {

				$(".datepicker").datepicker({

					dateFormat: "dd-mm-yy",
					changeMonth: true,
					changeYear: true,
					yearRange: "-35:+35",
				});

			});
		</script>

	}

	
